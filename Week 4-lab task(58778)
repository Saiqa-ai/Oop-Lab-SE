public class Check {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        int num=4;
        if(num%2==0){
            System.out.println("The number is even");
        }
        else
            if(num%2!=0){
                System.out.println("The number is odd");
                    
                    }
                    
        }
    }

